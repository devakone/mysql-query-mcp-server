{
  "name": "mysql-query-mcp-server",
  "version": "1.0.0",
  "description": "MySQL Query MCP server for AI assistants - execute read-only MySQL queries from Cursor IDE, Windsurf, or Claude Desktop",
  "main": "dist/index.js",
  "bin": {
    "mysql-query-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "echo \"No tests defined\" && exit 0",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cursor",
    "cursor-ide",
    "windsurf",
    "claude",
    "claude-desktop",
    "mysql",
    "mcp",
    "database",
    "sql",
    "query",
    "read-only",
    "model-context-protocol",
    "ai-assistants"
  ],
  "author": "Abou Kon√© <devakone@github.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "dotenv": "^16.0.3",
    "mysql2": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^18.16.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example",
    "docs",
    "mcp.json.template",
    "install.sh"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devakone/mysql-query-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/devakone/mysql-query-mcp-server/issues"
  },
  "homepage": "https://github.com/devakone/mysql-query-mcp-server#readme"
}
